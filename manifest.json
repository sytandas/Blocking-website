{
  "name": "Blocking website",
  "description": "Helps you blocking distracting websites",
  "version": "1.0",
  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules_1.json"
    }, {
      "id": "ruleset_2",
      "enabled": false,
      "path": "rules_2.json"
    }]
  },
  "permissions": [
    "declarativeNetRequestWithHostAccess",
    "webRequest",
    "declarativeNetRequest",
    "activeTab",
    "tabs",
    "notifications"
  ],
  "background" : {
    "service_worker" : "background.js"
  },
  "manifest_version": 3
}