{
  "manifest_version": 3,
  "name": "Blocking website",
  "description": "Helps you blocking distracting websites",
  "version": "1.0",
  "permissions": [
    "declarativeNetRequestWithHostAccess",
    "webRequest",
    "declarativeNetRequest",
    "activeTab",
    "tabs",
    "notifications"
  ],
    "content_scripts": [{
      "matches": ["http://*/*", "https://*/*"],
      "css": ["/style.css"]
  }],

  "permissions": ["http://*/*", "https://*/*"],
  "background": { "service_worker": "background.js"}
}
